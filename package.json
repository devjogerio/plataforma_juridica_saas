{
  "name": "plataforma-juridica-saas",
  "version": "1.0.0",
  "description": "Plataforma SaaS completa para gestão de escritórios de advocacia e departamentos jurídicos",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "next build",
    "build:server": "tsc -p server/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "migrate": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "db:seed": "node server/seeds/index.js",
    "db:reset": "npx prisma migrate reset",
    "docker:build": "docker build -t plataforma-juridica .",
    "docker:run": "docker run -p 3000:3000 plataforma-juridica",
    "prepare": "husky install"
  },
  "keywords": [
    "saas",
    "juridico",
    "advocacia",
    "gestao",
    "processos",
    "clientes",
    "documentos",
    "agenda",
    "faturamento"
  ],
  "author": "Rogério Assunção <fourcolors.dev@outlook.com.br>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "next": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/express": "^4.17.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.3",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prisma": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/plataforma_juridica_saas.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/plataforma_juridica_saas/issues"
  },
  "homepage": "https://github.com/seu-usuario/plataforma_juridica_saas#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}